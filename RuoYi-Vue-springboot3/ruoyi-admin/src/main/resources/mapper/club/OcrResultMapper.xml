<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.club.mapper.OcrResultMapper">
    
    <resultMap type="OcrResult" id="OcrResultResult">
        <result property="id"    column="id"    />
        <result property="filename"    column="filename"    />
        <result property="imageUrl"    column="image_url"    />
        <result property="text"    column="text"    />
        <result property="lines"    column="lines" typeHandler="com.ruoyi.common.utils.StringArrayTypeHandler"    />
        <result property="processingTime"    column="processing_time"    />
        <result property="status"    column="status"    />
        <result property="confidenceScore"    column="confidence_score"    />
        <result property="isConfirmed"    column="is_confirmed"    />
        <result property="confirmedRecordId"    column="confirmed_record_id"    />
        <result property="ocrEngineVersion"    column="ocr_engine_version"    />
        <result property="retryCount"    column="retry_count"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectOcrResultVo">
        select id, filename, image_url, `text`, `lines`, processing_time, status, 
               confidence_score, is_confirmed, confirmed_record_id, ocr_engine_version, retry_count, 
               remark, create_by, create_time, update_by, update_time 
        from club_ocr_result
    </sql>

    <select id="selectOcrResultList" parameterType="OcrResult" resultMap="OcrResultResult">
        <include refid="selectOcrResultVo"/>
        <where>  
            <if test="filename != null  and filename != ''"> and filename like concat('%', #{filename}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectOcrResultById" parameterType="Long" resultMap="OcrResultResult">
        <include refid="selectOcrResultVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertOcrResult" parameterType="OcrResult" useGeneratedKeys="true" keyProperty="id">
        insert into club_ocr_result (filename, image_url, `text`, `lines`, processing_time, status, 
                                confidence_score, is_confirmed, confirmed_record_id, ocr_engine_version, retry_count, create_time)
        values (#{filename}, #{imageUrl}, #{text}, #{lines, typeHandler=com.ruoyi.common.utils.StringArrayTypeHandler}, 
                #{processingTime}, #{status}, #{confidenceScore}, #{isConfirmed}, #{confirmedRecordId}, 
                #{ocrEngineVersion}, #{retryCount}, now())
    </insert>

    <update id="updateOcrResult" parameterType="OcrResult">
        update club_ocr_result
        <trim prefix="SET" suffixOverrides=",">
            <if test="filename != null and filename != ''">filename = #{filename},</if>
            <if test="imageUrl != null">image_url = #{imageUrl},</if>
            <if test="text != null">`text` = #{text},</if>
            <if test="lines != null">`lines` = #{lines, typeHandler=com.ruoyi.common.utils.StringArrayTypeHandler},</if>
            <if test="processingTime != null">processing_time = #{processingTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="confidenceScore != null">confidence_score = #{confidenceScore},</if>
            <if test="isConfirmed != null">is_confirmed = #{isConfirmed},</if>
            <if test="confirmedRecordId != null">confirmed_record_id = #{confirmedRecordId},</if>
            <if test="ocrEngineVersion != null">ocr_engine_version = #{ocrEngineVersion},</if>
            <if test="retryCount != null">retry_count = #{retryCount},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOcrResultById" parameterType="Long">
        delete from club_ocr_result where id = #{id}
    </delete>

    <delete id="deleteOcrResultByIds" parameterType="String">
        delete from club_ocr_result where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>